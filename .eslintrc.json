{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "plugins": [
    "deprecation",
    "simple-import-sort"
  ],
  "rules": {
    "@next/next/no-img-element": "off",
    "deprecation/deprecation": "warn",
    "no-unused-vars": "warn",
    "no-extra-semi": "warn",
    "simple-import-sort/imports": "warn",
    "simple-import-sort/exports": "warn"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "env": {
    "es2024": true
  }
}
